@page
@model LibrarySystem.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Logowanie</h2>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Użytkownik</label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Hasło</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button class="btn btn-primary">Zaloguj</button>
            <span class="text-danger">@Model.Error</span>
        </form>
        <div class="mt-3 small text-muted">
            Konta testowe: <code>admin/admin123</code>, <code>librarian/librarian123</code>, <code>member/member123</code>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
