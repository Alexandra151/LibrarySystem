@page
@model LibrarySystem.Web.Pages.GraphQL.BooksModel
@{
    ViewData["Title"] = "GraphQL: books";
}

<h2>GraphQL: books</h2>

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>AuthorId</th>
            <th>Total</th>
            <th>Avail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Items)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Title</td>
                <td>@b.AuthorId</td>
                <td>@b.CopiesTotal</td>
                <td>@b.CopiesAvailable</td>
            </tr>
        }
    </tbody>
</table>
